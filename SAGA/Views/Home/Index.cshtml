@model SAGA.Models.Usuario
@{
    ViewBag.Title = "Inicio";
}


    <div class="jumbotron bg-primary text-white">
        <div class="container text-center">
            <h1 class="display-4">Bienvenido a SAGA</h1>
            <p class="lead">Sistema Argentino de Graduación para Ajedrecistas</p>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h2 class="text-center">Iniciar Sesión</h2>
                <form method="post" action="@Url.Action("Login", "Account")">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.NombreUsuario, "Usuario")
                        @Html.TextBoxFor(model => model.NombreUsuario, new { @class = "form-control", placeholder = "Correo electrónico" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Pass, "Contraseña")
                        @Html.PasswordFor(model => model.Pass, new { @class = "form-control", placeholder = "Contraseña" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
                    </div>
                </form>
                <div class="text-center">
                    <a href="@Url.Action("Create", "Usuarios")" class="btn btn-success">Registrarse</a>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <br />
            <br />
            <div class="col-md-8 offset-md-2">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Bienvenidos!</h4>
                    <p>
                        Aquí podrías colocar información destacada sobre las funcionalidades clave de la aplicación,
                        como la visualización de ELO, estadísticas de partidas, resultados de torneos, entre otros.
                    </p>
                    <hr>
                    <p class="mb-0">
                        Además, podrías incluir información sobre cómo se utilizan los archivos de torneos y
                        cómo se procesan para actualizar la información de los usuarios.
                    </p>
                </div>
            </div>
        </div>
    </div>


